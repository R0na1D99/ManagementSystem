<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EmpServlet</servlet-name>
        <servlet-class>servlet.EmpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmpServlet</servlet-name>
        <url-pattern>/EmpServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>JobServlet</servlet-name>
        <servlet-class>servlet.JobServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JobServlet</servlet-name>
        <url-pattern>/JobServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeptDeleteController</servlet-name>
        <servlet-class>servlet.lr.DeptDeleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeptDeleteController</servlet-name>
        <url-pattern>/DeptDeleteController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateController</servlet-name>
        <servlet-class>servlet.lr.UpdateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateController</servlet-name>
        <url-pattern>/UpdateController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeptUpdateController</servlet-name>
        <servlet-class>servlet.lr.DeptUpdateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeptUpdateController</servlet-name>
        <url-pattern>/DeptUpdateController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeptShowEmp</servlet-name>
        <servlet-class>servlet.lr.DeptShowEmp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeptShowEmp</servlet-name>
        <url-pattern>/DeptShowEmp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeptInsertController</servlet-name>
        <servlet-class>servlet.lr.DeptInsertController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeptInsertController</servlet-name>
        <url-pattern>/DeptInsertController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeptListController</servlet-name>
        <servlet-class>servlet.lr.DeptListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeptListController</servlet-name>
        <url-pattern>/DeptListController</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <jsp-config>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/fmt</taglib-uri>
            <taglib-location>/WEB-INF/tld/fmt.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/fmt-rt</taglib-uri>
            <taglib-location>/WEB-INF/tld/fmt-1_0-rt.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
            <taglib-location>/WEB-INF/tld/c.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/core-rt</taglib-uri>
            <taglib-location>/WEB-INF/tld/c-1_0-rt.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/sql</taglib-uri>
            <taglib-location>/WEB-INF/tld/sql.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/sql-rt</taglib-uri>
            <taglib-location>/WEB-INF/tld/sql-1_0-rt.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/x</taglib-uri>
            <taglib-location>/WEB-INF/tld/x.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/x-rt</taglib-uri>
            <taglib-location>/WEB-INF/tld/x-1_0-rt.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>